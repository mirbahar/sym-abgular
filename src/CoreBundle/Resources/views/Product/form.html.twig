{% extends 'base.html.twig' %}
{% block body %}
    <div class="row" >
        <div class="col-md-12">

        <div class="col-md-6" ng-controller="formController">

             <div class="portlet-body form">
            {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'id': 'product-form', 'novalidate': 'novalidate'} }) }}
                <div class="form-body">

                    <div class="form-group">
                        <label>Product Name</label>
                        <div class="input-group">
											<span class="input-group-addon input-circle-left">
											<i class="fa fa-envelope"></i>
											</span>
                            {{ form_widget(form.name, { 'attr': {'ng-model':'formData.name','class': 'form-control'} }) }}

                        </div>
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <div class="input-group">
											<span class="input-group-addon input-circle-left">
											<i class="fa fa-envelope"></i>
											</span>
                            {{ form_widget(form.description, { 'attr': {'ng-model':'formData.description','class': 'form-control'} }) }}

                        </div>
                    </div>
                    <div class="form-group">
                        <label>Quantity</label>
                        <div class="input-group">
											<span class="input-group-addon input-circle-left">
											<i class="fa fa-envelope"></i>
											</span>
                            {{ form_widget(form.quantity, { 'attr': {'ng-model':'formData.quantity','class': 'form-control'} }) }}

                        </div>
                    </div>
                    <div class="form-group">
                        <label>Price</label>
                        <div class="input-group">
											<span class="input-group-addon input-circle-left">
											<i class="fa fa-envelope"></i>
											</span>
                            {{ form_widget(form.price, { 'attr': {'ng-model':'formData.price','class': 'form-control'} }) }}

                        </div>
                    </div>
                    <div class="form-group">
                        <label>status</label>
                        <div class="input-group">
											<span class="input-group-addon input-circle-left">
											<i class="fa fa-envelope"></i>
											</span>
                            {{ form_widget(form.status, { 'attr': {'ng-model':'formData.status','class': 'form-control'} }) }}

                        </div>
                    </div>
                    <div class="form-actions">
                    {{ form_widget(form.save, { 'attr': {'ng-click':'createProduct()','class': 'btn button-width'} }) }}
                    <button type="button" class="btn default">Cancel</button>
                </div>

                </div>
            {{ form_end(form) }}
            </div>

        </div>

            <div class="col-md-6" ng-controller = "ProductListCtrl">
                <label><input type="text" class="form-control" placeholder="Search Product" ng-model="query"></label>
                <div class="portlet-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                            <tr>
                                <th>S/N</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Quantity</th>
                                <th>price</th>
                                <th>status</th>
                                <th>Action</th>

                            </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="product in products | filter:query | orderBy:orderProp">
                                    <td>{{ '{{ product.id }}' }}</td>
                                    <td>{{ '{{ product.name }}' }}</td>
                                    <td>{{ '{{ product.description }}' }}</td>
                                    <td>{{ '{{ product.quantity }}' }}</td>
                                    <td>{{ '{{ product.price }}' }}</td>
                                    <td>{{ '{{ product.status }}' }}</td>
                                    <td>Action</td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
        </div>

    </div>
    </div>


{% endblock %}

 {% block documentReady %}
     {{ parent() }}

 {% endblock %}